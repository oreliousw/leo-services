#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Leo System Command â€“ leo
================================================
Primary operator interface for Leo Services

MODULAR DISPATCHER VERSION
"""
import sys
from core import red

def main():
    if len(sys.argv) < 2:
        print("Use: leo <command>")
        print("Available: kraken | wallets | mes | mining | ops | aircraft")
        return

    cmd = sys.argv[1]
    args = sys.argv[2:]

    if cmd == "kraken":
        import kraken
        kraken.handle(args)

    elif cmd == "wallets":
        import wallets
        wallets.handle(args)

    elif cmd == "mes":
        import mes
        mes.handle(args)

    elif cmd == "mining":
        import mining
        mining.handle(args)

    elif cmd == "ops":
        import ops
        ops.handle(args)

    elif cmd == "aircraft":
        import aircraft
        aircraft.handle(args)

    else:
        red(f"Unknown command: {cmd}")

if __name__ == "__main__":
    main()
